# WSGI handler
WSGIScriptAlias /covscanhub /usr/lib/python2.4/site-packages/covscanhub/covscanhub.wsgi


# kobo media
Alias /covscanhub/media/kobo/ "/usr/lib/python2.4/site-packages/kobo/hub/media/"
<Directory "/usr/lib/python2.4/site-packages/kobo/hub/media/">
    Order allow,deny
    Options Indexes
    Allow from all
    IndexOptions FancyIndexing
</Directory>


# project media
Alias /covscanhub/media/ "/var/www/django/covscanhub/media/"
<Directory "/var/www/django/covscanhub/media/">
    Order allow,deny
    Options Indexes
    Allow from all
    IndexOptions FancyIndexing
</Directory>


# admin media
Alias /covscanhub/admin/media/ "/usr/lib/python2.4/site-packages/django/contrib/admin/media/"
<Directory "/usr/lib/python2.4/site-packages/django/contrib/admin/media/">
    Order allow,deny
    Options Indexes
    Allow from all
    IndexOptions FancyIndexing
</Directory>


