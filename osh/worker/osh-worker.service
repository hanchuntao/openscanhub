[Unit]
Description=OpenScanHub worker daemon
Requires=network-online.target
After=network-online.target

[Service]
Type=forking
PIDFile=/run/osh-worker.pid
ExecStartPre=test -r /etc/osh/worker.conf
ExecStart=/usr/sbin/osh-worker -p /run/osh-worker.pid
ExecStop=/usr/sbin/osh-worker -k
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
