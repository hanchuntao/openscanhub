[Unit]
Description=Covscan worker daemon
Requires=network.target
After=network.target

[Service]
Type=forking
PIDFile=/run/covscand.pid
ExecStartPre=test -r /etc/osh/worker.conf
ExecStart=/usr/sbin/osh-worker -p /run/covscand.pid
ExecStop=/usr/sbin/osh-worker -k
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
