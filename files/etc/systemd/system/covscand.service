[Unit]
Description=Covscan worker daemon
Requires=network.target
After=network.target

[Service]
Type=forking
PIDFile=/run/covscand.pid
ExecStartPre=test -r /etc/covscan/covscand.conf
ExecStart=/usr/sbin/covscand -p /run/covscand.pid
ExecStop=/usr/sbin/covscand -k
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
